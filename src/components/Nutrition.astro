---
import SmallTitle from './shared/SubTitle.astro';
import { nutritions } from '../data/nutritions';
---

<section class='mt-5'>
	<SmallTitle title='Nutrition' />
	<p class='text-gray-500 text-[15px] mb-5'>
		The table below shows nutritional values per serving without the additional
		fillings.
	</p>
	<table class='w-full'>
		<tbody>
			{
				nutritions.map((el) => (
					<tr class='border-b-[1px] last:border-0'>
						<td class='py-2 ml-5 pl-14'>{el.text}</td>
						<td class='py-2 font-bold text-nutmeg'>{el.value}</td>
					</tr>
				))
			}
		</tbody>
	</table>
</section>
